<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- User Image Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="100dp"
            app:cardElevation="6dp">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/person_icon"
                android:scaleType="centerCrop"
                android:contentDescription="User Image"/>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"/>

        <!-- Card with Inputs -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Name -->
                <EditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:background="@drawable/edittext_bg"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"/>

                <!-- Phone Number -->
                <EditText
                    android:id="@+id/editNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"/>

                <!-- District -->
                <EditText
                    android:id="@+id/editDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="District"
                    android:inputType="text"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"/>

                <!-- State -->
                <EditText
                    android:id="@+id/editState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="State"
                    android:inputType="text"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"/>

                <!-- Country -->
                <EditText
                    android:id="@+id/editCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Country"
                    android:inputType="text"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"/>

                <!-- Farm Area -->
                <EditText
                    android:id="@+id/editFarmArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Farm Area (acres)"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"/>

                <!-- Crop Type -->
                <EditText
                    android:id="@+id/editCropType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Crop Type"
                    android:inputType="text"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"/>

                <!-- Soil Type -->
                <EditText
                    android:id="@+id/editSoilType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Soil Type"
                    android:inputType="text"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"/>

                <!-- Irrigation Type -->
                <EditText
                    android:id="@+id/editIrrigationType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Irrigation Type"
                    android:inputType="text"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"/>

                <!-- Checkbox -->
                <CheckBox
                    android:id="@+id/confirmCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I confirm all details are correct"
                    android:textColor="@color/gray"
                    android:layout_marginTop="16dp"/>

                <!-- Submit Button -->
                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Details"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:enabled="false"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
